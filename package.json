{
  "name": "task-management",
  "version": "1.0.0",
  "description": "A task management tool for subscribed users.",
  "main": "index.js",
  "repository": "https://github.com/marcosleonel/task-management",
  "author": "Marcos Leonel <leonel.coder@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && tsc --build",
    "dev": "ts-node-dev --inspect=0.0.0.0:9229 --exit-child --respawn ./src/index.ts",
    "start": "node dist/src/index.js",
    "start:docker": "yarn build && yarn dev",
    "db:console": "docker-compose exec db psql -h localhost -U postgres -d task_management",
    "test": "jest --coverage=true",
    "test:watch": "jest --watch --coverage=true",
    "test:staged": "jest --onlyChanged --coverage=true",
    "lint:staged": "ts-standard && yarn test:staged",
    "prepare": "husky install"
  },
  "engines": {
    "node": "16"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "dist"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.33",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "rimraf": "^3.0.2",
    "standard": "^17.0.0",
    "ts-node-dev": "^1.1.8",
    "ts-standard": "^11.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "morgan": "^1.10.0"
  }
}
